<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Book Notes</title>
    </head>
    <body>
        <% if (locals.currentUser) { %>
        <h1>Welcome, <%= currentUser.name %>!</h1>
        <% } else { %>
        <h1>Welcome! Add new user to start</h1>
        <% } %>

        <form class="tab-view tab-view-height-auto" action="/user" method="post">
            <% if (locals.users) { %> <% users.forEach(function(user) { %>
            <input type="submit" name="user" value="<%= user.id %>" id="<%= user.id %>" />
            <label for="<%= user.id %>"> <%= user.name %> </label>
            <% }); %> <% } %>

            <input type="submit" name="add" value="new" id="tab" />
            <label for="tab">Add user</label>
        </form>
    </body>
</html>
